<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado equipo local"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtResultadoLocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Ingrese el resultado del equipo local" />

    <TextView
        android:id="@+id/textViewVisitante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado equipo visitante"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtResultadoVisitante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Ingrese el resultado del equipo visitante" />

</LinearLayout>
